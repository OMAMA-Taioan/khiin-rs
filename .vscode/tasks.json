{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cargo",
            "command": "make",
            "args": ["build-all"],
            "problemMatcher": ["$rustc"],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "label": "cargo:build:windows:ime"
        },
        {
            "type": "cargo",
            "command": "make",
            "problemMatcher": ["$rustc"],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "label": "cargo:build:cli"
        },
        {
            "type": "cargo",
            "command": "test",
            "args": ["--manifest-path=khiin/Cargo.toml"],
            "problemMatcher": ["$rustc"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "label": "cargo:test:khiin"
        },
        {
            "label": "tauri:dev",
            "type": "shell",
            "isBackground": true,
            "command": "npm",
            "options": { "cwd": "${workspaceFolder}/app/frontend" },
            "args": ["run", "dev"],
            "problemMatcher": "$tsc-watch"
        }
    ]
}
