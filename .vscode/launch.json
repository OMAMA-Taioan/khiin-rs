{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Dev CLI",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/khiin_cli",
            "preLaunchTask": "cargo:build:cli"
        },
        {
            "name": "Win:Notepad",
            "type": "cppvsdbg",
            "request": "launch",
            "preLaunchTask": "cargo:build:windows:ime",
            "program": "C:\\Windows\\System32\\notepad.exe",
            "cwd": "${workspaceRoot}"
        },
        {
            "name": "Win:Attach",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "LLDB:Attach",
            "type": "lldb",
            "request": "attach",
            "pid": "${command:pickMyProcess}"
        },
        {
            "name": "Win:Settings",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/khiin_settings.exe",
            "cwd": "${workspaceRoot}"
        }
    ]
}
