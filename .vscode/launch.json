{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Dev CLI",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/khiin_cli",
            "preLaunchTask": "cargo:build:cli"
        },
        {
            "name": "Win:CLI",
            "cwd": "${workspaceRoot}",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/cli2.exe",
            "console": "integratedTerminal"
        },
        {
            "name": "Win:Notepad",
            "type": "cppvsdbg",
            "request": "launch",
            "preLaunchTask": "build-win32",
            "program": "C:\\Windows\\System32\\notepad.exe",
            "cwd": "${workspaceRoot}"
        },
        {
            "name": "Win:Service",
            "type": "cppvsdbg",
            "request": "launch",
            "preLaunchTask": "build-win32",
            "program": "${workspaceRoot}/target/debug/khiin_service.exe",
            "cwd": "${workspaceRoot}"
        },
        {
            "name": "Win:Attach",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "LLDB:Attach",
            "type": "lldb",
            "request": "attach",
            "pid": "${command:pickMyProcess}"
        },
        {
            "name": "Db:Build",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/data",
            "program": "${workspaceFolder}/data/src/sql_gen.py",
            "console": "integratedTerminal",
            "args": [
                "-f",
                "data/frequency.csv",
                "-c",
                "data/conversions_all.csv",
                "-s",
                "data/syllables.txt",
                "-t",
                "-y",
                "data/symbols.tsv",
                "-e",
                "data/emoji.csv",
                "-o",
                "out/khiin_db.sql",
                "-d",
                "out/khiin.db"
            ]
        },
        {
            "name": "Mac:KhiinIM",
            "type": "lldb",
            "request": "launch",
            "sourceLanguages": ["swift"],
            "program": "${workspaceFolder:khiin-rs}/swift/.build/debug/KhiinIM",
            "args": [],
            "cwd": "${workspaceFolder:khiin-rs}/swift",
            "preLaunchTask": "swift: Build Debug KhiinIM (swift)"
        },
        {
            "name": "Mac:KhiinIM (Release)",
            "type": "lldb",
            "request": "launch",
            "sourceLanguages": ["swift"],
            "program": "${workspaceFolder:khiin-rs}/swift/.build/release/KhiinIM",
            "args": [],
            "cwd": "${workspaceFolder:khiin-rs}/swift",
            "preLaunchTask": "swift: Build Release KhiinIM (swift)"
        },
        {
            "type": "lldb",
            "request": "launch",
            "sourceLanguages": ["swift"],
            "name": "Debug KhiinIM (swift/osx)",
            "program": "${workspaceFolder:khiin-rs}/swift/osx/.build/debug/KhiinIM",
            "args": [],
            "cwd": "${workspaceFolder:khiin-rs}/swift/osx",
            "preLaunchTask": "swift: Build Debug KhiinIM (swift/osx)"
        },
        {
            "type": "lldb",
            "request": "launch",
            "sourceLanguages": ["swift"],
            "name": "Release KhiinIM (swift/osx)",
            "program": "${workspaceFolder:khiin-rs}/swift/osx/.build/release/KhiinIM",
            "args": [],
            "cwd": "${workspaceFolder:khiin-rs}/swift/osx",
            "preLaunchTask": "swift: Build Release KhiinIM (swift/osx)"
        },
        {
            "name": "Tauri Dev",
            "type": "lldb",
            "cwd": "${workspaceFolder}/app",
            "request": "launch",
            "cargo": {
                "args": [
                    "build",
                    "--manifest-path=${workspaceFolder:khiin-rs}/app/src-tauri/Cargo.toml",
                    "--no-default-features"
                ]
            },
        }
    ],
    "compounds": [
        {
            "name": "Notepad/Service",
            "configurations": ["Win:Notepad", "Win:Service"],
            "stopAll": true
        }
    ]
}
